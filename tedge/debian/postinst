### Create groups
groupadd tedge-users
groupadd tedge

### Create users
# Create user tedge with no home(--no-create-home), no login(--shell) and in group tedge(--ingroup)
adduser --gecos "" --no-create-home --disabled-login --shell /sbin/nologin --ingroup tedge tedge

### Create folders
mkdir /etc/tedge
chown tedge:tedge /etc/tedge
chmod 770 /etc/tedge

# Create file in /etc/sudoers.d directory
echo "%tedge-users   ALL = (ALL) /usr/bin/tedge" > /etc/sudoers.d/tedge-users

### Below are automatically created script parts by cargo deb (Search for cargo deb DEBHELPER)
#DEBHELPER#
